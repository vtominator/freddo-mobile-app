<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lvEvents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange">


            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:lines="1"
                android:layout_marginRight="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Esemény neve"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEventName"
                android:background="@color/white"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivLOC"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_location"
                    android:backgroundTint="@color/grey" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:textColor="@color/grey"
                    android:textStyle="bold|italic" />


                <ImageView
                    android:id="@+id/ivDATE"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_calendar"

                    android:backgroundTint="@color/grey" />

                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/ivTIME"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_time"

                    android:backgroundTint="@color/grey" />

                <TextView
                    android:id="@+id/tvEventTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <View
                android:id="@+id/sep"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/infoLayout"
                android:background="#000000">

            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/midLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topLayout">

            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/light" />

            <LinearLayout
                android:id="@+id/hashtags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEventDescription"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cbFestivalTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="#Fesztivál"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cbConcertTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="#Koncert"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cbPerformanceTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="#Előadás"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cbEventTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="#Esemény"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cbDealTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="#Akció"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cbFreeTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/orange"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="#Ingyenes"
                    android:textColor="@color/white" />


            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/sep1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/midLayout"
            android:background="#000000">

        </View>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep1"
            android:background="@color/white">


            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textStyle="italic" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="AKTIVÁLÁSRA VÁR"
            android:fontFamily="@font/light"
            android:textSize="22sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
