<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vtominator.freddo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/freddo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/freddo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.vtominator.freddo.View.ActivityMyEvents" />
        <activity android:name="com.vtominator.freddo.View.ActivityDeleteUser" />
        <activity android:name="com.vtominator.freddo.View.ActivityAddEvent" />
        <activity android:name="com.vtominator.freddo.View.ActivityHome" />
        <activity android:name="com.vtominator.freddo.View.ActivityChangeEmail" />
        <activity android:name="com.vtominator.freddo.View.ActivitySettings" />
        <activity android:name="com.vtominator.freddo.View.ActivityChangePassword" />
        <activity android:name="com.vtominator.freddo.View.ActivityRegistration" />
        <activity android:name="com.vtominator.freddo.View.ActivityProfile" />
        <activity android:name="com.vtominator.freddo.View.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>